{
	"name": "sayenko-erickson",
	"version": "1.0.0",
	"description": "Erickson is a WordPress starter theme using the Zurb Foundation framework and Laravel Mix build tools based on the Exhale theme by Jason Tadlock.",
	"author": "Sayenko design",
	"license": "GPL-2.0+",
	"homepage": "https://sayenkodesign.com",
	"main": "assets/js/project.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"watch:sync": "cross-env sync=1 NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"hot": "cross-env sync=1 NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
		"prod": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"export": "cross-env export=1 NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"lint": "npm run lint:styles && npm run lint:scripts",
		"lint:styles": "cross-env stylelint './assets/scss/**/*.scss' --syntax scss",
		"lint:scripts": "cross-env eslint './assets/js/**/*.js'",
		"i18n": "npm run i18n:textdomain && npm run i18n:pot",
		"i18n:textdomain": "npx wpi18n addtextdomain --exclude=vendor,node_modules",
		"i18n:pot": "npx wpi18n makepot --domain-path=/assets/lang",
		"build": "npm run prod && npm run i18n"
	},
	"repository": {
		"type": "git",
		"url": "git+git@github.com:SayenkoDesign/erickson.git"
	},
	"bugs": {
		"url": "git@github.com:SayenkoDesign/erickson/issues"
	},
	"devDependencies": {
		"@babel/polyfill": "^7.8.7",
		"@babel/preset-react": "^7.9.0",
		"@fancyapps/fancybox": "^3.5.7",
		"@wordpress/babel-preset-default": "^4.10.0",
		"@wordpress/dependency-extraction-webpack-plugin": "^2.4.0",
		"browser-sync": "^2.26.7",
		"browser-sync-webpack-plugin": "2.2.2",
		"classnames": "^2.2.6",
		"clip-path": "^1.2.0",
		"copy-webpack-plugin": "^5.1.1",
		"core-js": "^3.6.4",
		"cross-env": "^6.0.3",
		"eslint": "^6.8.0",
		"eslint-config-wordpress": "^2.0.0",
		"fibers": "^4.0.2",
		"foundation-sites": "^6.6.1",
		"imagemin-mozjpeg": "^8.0.0",
		"imagemin-webpack-plugin": "^2.4.2",
		"imagesloaded": "^4.1.4",
		"infinite-scroll": "^3.0.6",
		"isotope-layout": "^3.0.6",
		"jquery-bridget": "^2.0.1",
		"jquery-match-height": "^0.7.2",
		"jquery-smooth-scroll": "^2.2.0",
		"laravel-mix": "^5.0.4",
		"laravel-mix-polyfill": "^2.0.0",
		"laravel-mix-wp-blocks": "^0.2.0",
		"lodash.assign": "^4.2.0",
		"motion-ui": "^2.0.3",
		"node-sass": "^7.0.0",
		"node-wp-i18n": "^1.2.3",
		"normalize.css": "^8.0.1",
		"postcss-preset-env": "^6.7.0",
		"rimraf": "^3.0.2",
		"sass": "^1.26.3",
		"sass-loader": "^7.1.0",
		"slick-carousel": "^1.8.1",
		"stylelint": "^12.0.0",
		"stylelint-config-wordpress": "^16.0.0",
		"targets-webpack-plugin": "^3.0.0",
		"theme-claim": "^0.2.0",
		"vue-template-compiler": "^2.6.11",
		"webfontloader": "^1.6.28",
		"what-input": "^5.2.7"
	},
	"dependencies": {
		"countup.js": "^2.0.4",
		"js-cookie": "^2.2.1",
		"scrollreveal": "^4.0.6"
	}
}
